@page "/todo" 
<EditForm Model="request" OnValidSubmit="AddTodo">
    <FluentValidationValidator />
    <TextEdit class="form-control" @bind-Text="request.Text"></TextEdit>
    <ValidationMessage For="() => request.Text"></ValidationMessage>
    <Button Color="Color.Primary" Type="ButtonType.Submit">Senda</Button>
</EditForm>

@if(result != null)
{
    <h2>@result</h2>
}

